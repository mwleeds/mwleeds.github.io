FROM node:16-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies (skip preinstall script that requires Ruby)
RUN npm install --legacy-peer-deps --ignore-scripts && \
    npm rebuild node-sass

# Copy source files
COPY _webpack _webpack/
COPY webpack.config.js ./

# Build webpack bundle
RUN npm run build:webpack

# The built files will be in assets/js/
